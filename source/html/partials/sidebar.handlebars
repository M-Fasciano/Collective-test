{{#if sidebar}}
    {{#with sidebar}}
    <!-- sidebar -->
    <aside class="sidebar">
        <header class="sidebar--header">
            <img class="sidebar__picture" src="/images/michele-fasciano.jpg" alt="Michele Fasciano"/>
            <span class="sidebar__details">
                {{#if user}}<h1>{{user}}</h1>{{/if}}
                {{#if role}}<h2>{{role}}</h2>{{/if}}
            </span>
        </header>
        <nav class="sidebar--nav">
            <h2 class="hidden">Navigation menu</h2>
            <ul>
            {{#each item}}
                {{#if title}}<li><a href="#"><span class="[ icon icon-{{icon}} ]"></span>{{title}}</a></li>{{/if}}
            {{/each}}
            </ul>
        </nav>
    </aside>
    <!-- end sidebar -->
    {{/with}}
{{/if}}